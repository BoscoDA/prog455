@model IEnumerable<Week4Databases.Character>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="/content/CharacterStyle.css" />
</head>

<body>
    <h2>Characters</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Element_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ATK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DEF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HP_Initial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HP_Max)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NPC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maps)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Element_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job_Class)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ATK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DEF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mana)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HP_Initial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HP_Max)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NPC)
                </td>
                <td>
                    @if (item.Maps != null && item.Maps.Count > 0)
                    {
                        <ul>
                            @foreach (var map in item.Maps)
                            {
                                <li>
                                    @Html.DisplayFor(modelItem => map.Map_Name)
                                </li>

                            }
                        </ul>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</body>


@{
    ViewBag.Title = "CSSDemo";
    @Scripts.Render("~/bundles/jsScript")
}

<head>
    <link rel="stylesheet" href="../content/myStyle.css" />

    <script>
        function internalFunction() {
            var id = document.getElementById("internal");
            if (id.style.display === "none") {
                id.style.display = "block";
            }
            else {
                id.style.display = "none";
            }
        }
        
    </script>

    @*External JS*@
    @*<script src="~/Scripts/jsScript.js"></script>*@
</head>

<body>
    <div id="inline">
        <h1>This is a size "1" heading</h1>

        <script>
            function inlineFunction() {
                document.getElementById("inline").innerHTML = "Paragragh changed..."
            }
        </script>
    </div>

    <div id="internal">
        <h2>This is a size "2" heading</h2>
        <h3>This is a size "3" heading</h3>
    </div>

    <div id="external">
        <h4>This is a size "4" heading</h4>
        <h5>This is a size "5" heading</h5>
    </div>

    <button type="button" onclick="inlineFunction()">Click Me</button>
    <button type="button" onclick="internalFunction()">Click Me</button>
    <button type="button" onclick="externalFunction()">Click Me</button>
</body>

